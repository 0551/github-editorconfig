{
  "name": "github-editorconfig",
  "version": "1.0.0",
  "description": "EditorConfig support for GitHub",
  "dependencies": {
    "brace": "^0.4.0",
    "editorconfig": "^0.11.4",
    "iniparser": "^1.0.5",
    "jquery": "^2.1.1",
    "minimatch": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^6.1.0",
    "exorcist": "^0.1.6"
  },
  "scripts": {
    "gen-manifest": "node generate-manifest",
    "build-cjs": "cd src/common && browserify -d background.js | exorcist background.built.js.map > background.built.js",
    "build-ext": "python ../kango/kango.py build .",
    "prepublish": "npm run-script gen-manifest && npm run-script build-cjs && npm run-script build-ext"
  },
  "extension_info": {
    "name": "GitHub EditorConfig",
    "background_scripts": [
      "background.built.js"
    ],
    "content_scripts": [
      "content.js"
    ],
    "options_page": "options.html",
    "permissions": {
      "content_scripts": [
        "https://github.com/*"
      ],
      "xhr": [
        "https://raw.githubusercontent.com/*"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RReverser/github-editorconfig"
  },
  "author": "Ingvar Stepanyan <me@rreverser.com> (http://rreverser.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RReverser/github-editorconfig/issues"
  },
  "homepage": "https://github.com/RReverser/github-editorconfig",
  "private": true
}
