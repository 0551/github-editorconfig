{
  "name": "github-editorconfig",
  "version": "1.0.1",
  "description": "EditorConfig support for GitHub",
  "dependencies": {
    "editorconfig": "^0.11.4"
  },
  "devDependencies": {
    "browserify": "^6.1.0",
    "exorcist": "^0.1.6",
    "watchify": "^2.0.0"
  },
  "scripts": {
    "manifest": "node generate-manifest",
    "cjs": "cd src/common && browserify background.js -o background.built.js",
    "kango": "python ../kango/kango.py build .",
    "prepublish": "npm run-script manifest && npm run-script cjs && npm run-script kango",
    "watch": "echo Watching... && watchify src/common/background.js -o output/chrome/background.built.js -d -v",
    "dev": "npm run-script prepublish && npm run-script watch"
  },
  "extension_info": {
    "name": "GitHub EditorConfig",
    "background_scripts": [
      "background.built.js"
    ],
    "content_scripts": [
      "content.js"
    ],
    "options_page": "options.html",
    "permissions": {
      "content_scripts": [
        "https://github.com/*"
      ],
      "xhr": [
        "https://raw.githubusercontent.com/*"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RReverser/github-editorconfig"
  },
  "author": "Ingvar Stepanyan <me@rreverser.com> (http://rreverser.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RReverser/github-editorconfig/issues"
  },
  "homepage": "https://github.com/RReverser/github-editorconfig",
  "private": true
}
